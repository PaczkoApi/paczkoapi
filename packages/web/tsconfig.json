{
    "extends": "@nzyme/tsconfig/esm.json",
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "composite": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2022"],
        "moduleResolution": "bundler",
        "module": "esnext",
        "target": "es2022",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "h.Fragment"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
